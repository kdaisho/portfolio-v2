<section class="hero">
    <div class="title">
        <h1>DAISHO<br>KOMIYAMA</h1>
        <h2>Front-end Developer</h2>
    </div>
</section>

<a class="dest-link"></a>
<div class="wrapper">
    <section class="about">
        <img class="tape" src="images/scotch-tape.png" alt="scotch tape">
        <div class="about-top about-styles">
            <img src="images/daisho-profile.png" alt="daisho komiyama">
            <div class="my-name">
                <h2>Daisho Komiyama</h2>
                <h4>(die-show, komi-yama)</h4>
            </div>
        </div>
        <div class="about-bottom about-styles shadows">
            <div class="about-title">
                <h3>A bit about myself</h3>
                <img src="images/flag-canada.png" alt="flag of canada">
                <img src="images/flag-japan.png" alt="flag of japan">
            </div>
            <div class="about-content">
                <p>
                    Hello! I’m a front-end developer based in Montreal. I’m passionate about building clean,
                    light-weight
                    websites and apps, capitalizing on my experience and creativities in applying best practices in this
                    field.
                </p>
                <p>
                    I hope you enjoy my portfolio as much as I enjoyed building it!
                </p>
            </div>
        </div>
    </section>
    <section class="edu-skills">
        <div class="educations">
            <h2>Education</h2>
            <div class="cards">
                {{#each data.cards}}
                <div class="card" onclick="return true">
                    <div class="side-a {{this.institution}}-a card-style">
                        <img src="/images/{{this.url}}-logo.png" alt="{{this.institution}}">
                        <p>{{this.period}}</p>
                        <p>{{this.location}}</p>
                    </div>
                    <div class="side-b {{this.institution}}-b card-style">
                        <div class="v-align">
                            <div class="edu-title">
                                <h4>{{this.title}}</h4>
                            </div>
                            <p>{{this.description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="skills">
            <h2>Skills &amp; Experiences</h2>
            <div id="wrap_skill" class="wrap-skill">

                {{#each data.skills}}
                <div class="container-app">
                    <img class="icon-skill" src="/images/icon-{{this.url}}.png" alt="{{this.alt}}">
                    <div class="state-prog">
                        <div class="state">
                            <span class="{{this.eh}}">|</span>
                            <span class="{{this.okay}}">|</span>
                            <span class="{{this.good}}">|</span>
                            <span class="{{this.ninja}}">|</span>
                        </div>
                        <div class="wrap-prog">
                            <div class="prog-bar {{this.skill}}"><span>{{this.alt}}</span></div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>

    <a class="dest-link"></a>
    <section class="my-work goto-work">
        <h2>Personal Projects (2015&nbsp;&#8209;&nbsp;{{getYear}})</h2>
        <div id="wrap-thumbs">
            {{#each data.works}}
            <div class="wrap-thumb">
                <div>
                    <span class="my-work-desc">{{this.title}}<br>{{this.desc}}</span>
                    <p class="my-work-touchpanel" data-pos="{{this.pos}}"></p>
                </div>
                <img src="/images/{{this.url}}" alt="{{this.alt}}">
            </div>
            {{/each}}
        </div>
    </section>

    <section class="my-work">
        <!-- Contribution Calendar Widget -->
        <script src="//cdn.rawgit.com/IonicaBizau/github-calendar/gh-pages/dist/github-calendar.min.js"></script>
        <h2>Github Contributions</h2>
        <!-- Prepare a container for your calendar -->
        <div class="calendar"></div>

        <script>
            new GitHubCalendar('.calendar', 'kdaisho');
        </script>

        <a class="repositories" href="//github.com/kdaisho?tab=repositories" target="_blank">
            See all repositories &gt;
        </a>

        <div id="gal_holder">
            <div id="img_holder"></div>
            <div id="desc_holder"></div>
            <div id="close_btn">
                <img src="images/close-btn.svg" onError="this.onerror=null; this.src='images/close-btn.png'"
                    alt="close">
            </div>
            <div>
                <img id="prev" class="arrow" src="images/arrow-prev.svg"
                    onError="this.onerror=null; this.src='images/arrow-prev.png'" alt="previous" data-pos="0">
            </div>
            <div>
                <img id="next" class="arrow" src="images/arrow-next.svg"
                    onError="this.onerror=null; this.src='images/arrow-next.png'" alt="next" data-pos="0">
            </div>
        </div>
    </section>

    <div id="modal_bg"></div>
    {{>contact}}

</div>
<div class="btm-statement">
    <div class="wrapper">
        <p>&#169; Copyright {{getYear}} All Rights Reserved.</p>
    </div>
</div>